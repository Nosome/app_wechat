/**index.wxss**/
page{
  font-size:28rpx;
}
.search-box{
  display: flex;
  width:100%;
  height:100rpx;
  line-height: 100rpx;
  position:relative;
  border-bottom:1rpx solid #ccc;
}
.search-kind{
  width:130rpx;
  text-indent:15rpx;
  position:relative;
}
.sview-icon{
  width:30rpx;
  height:30rpx;
  position:absolute;
  top:35rpx;
  right:5rpx;
  transform:rotate(90deg);
}
.select-view{
  min-width:200rpx;
  text-indent:15rpx;
  position:absolute;
  top:100rpx;
  z-index: 1000;
  background: #ccc;
}
.search-input{
  width:475rpx;
  margin-left:15rpx;
}
.sinput{
  height:50rpx;
  line-height: 50rpx;
  margin-top:25rpx;
  padding-left:15rpx;
  color:#333;
  border-left:1rpx solid #eee;
}
.sbtn{
  height:60rpx;
  line-height: 60rpx;
  margin-top:20rpx;
  color:#fff;
  font-size:28rpx;
  border:none;
  background: #1d96f4;
}
.main-list{
  width:100%;
  position:fixed;
  top:105rpx;
  left:0;
  bottom:0;
  overflow: auto;
  background: #fff;
}
.main-list .list-item{
  display: flex;
  height:70rpx;
  line-height: 70rpx;
  margin:0 15rpx;
  font-size:28rpx;
  border-bottom:1rpx dashed #ccc;
}
.main-list .list-item .item-kind{
  width:150rpx;
  color:#999;
}
.main-list .list-item .item-title{
  width:460rpx;
  color:#333;
}
.main-list .list-item .item-date{
  /*width:100rpx;*/
  color:#b1b1b1;
}